<%= form_for @exam do |f| %>
  <% if @exam.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@exam.errors.count, "error") %> prohibited this exam from being saved:</h2>

      <ul>
      <% @exam.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field form-group">
    <%= f.label :title %><br>
    <%= f.text_field :title, class:"form-control" %>
  </div>
  <div class="field form-group">
    <%= f.label :question_number, "Number of Questions" %>
    <%= f.text_field :question_number, class:"form-control" %>
  </div>
  <div class="field form-group">
    <%= f.label :level %><br>
    <%= f.select(:level, options_for_select([1,2,3,4,5,['none',0]],@exam.level)) %>
  </div>
  <div class="field form-group">
    <%= f.label :topic %><br>
    <%= f.collection_select(:topic, Topic.all, :name, :name) %>
  </div>
  <div class="actions">
    <%= f.submit class:"btn btn-success" %>
  </div>
<% end %>
